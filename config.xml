<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ruthirsty.app" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RUthirsty</name>
    <description>
        一个简洁实用的喝水打卡应用，帮助你养成良好的喝水习惯。支持打卡记录、进度追踪、数据统计和导出等功能。
    </description>
    <author email="noreply@anthropic.com" href="https://github.com/mtur102/RUthirsty-cordova">
        Claude Sonnet 4.5
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#667eea" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
        <allow-intent href="market:*" />
    </platform>
</widget>
